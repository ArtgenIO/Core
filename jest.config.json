{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "roots": [
    "./src"
  ],
  "testMatch": [
    "**/*.(test|spec|e2e-test).ts"
  ],
  "silent": true,
  "verbose": true,
  "bail": true,
  "testTimeout": 5000,
  "collectCoverage": false,
  "globalSetup": "./tests/global.setup.js",
  "moduleNameMapper": {
    "#ansi-styles": "ansi-styles/index.js",
    "#supports-color": "supports-color/index.js"
  }
}